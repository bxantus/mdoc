{
	"name": "xdoc",
	"displayName": "xdoc",
	"description": "markdown documentation viewer",
	"version": "1.0.0-alpha.3",
	"publisher": "bxantus",
	"author": {
		"name": "Botond Xantus",
		"email": "drx.trash@gmail.com"
	},
	"icon": "media/icon.png",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "xdoc",
					"title": "Documentations",
					"icon": "media/library_books.svg"
				}
			]
		},
		"views": {
			"xdoc": [
				{
					"id": "xdocProjects",
					"name": "Projects"
				}
			]
		},
		"commands": [
			{
				"command": "xdoc.add.fromFilesystem",
				"title": "Add documentation project from the filesystem",
				"group": "xdoc"
			}
		],
		"viewsWelcome": [
			{
				"view": "xdocProjects",
				"contents": "No documentation projects added.\n[Add project from filesystem](command:xdoc.add.fromFilesystem)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/markdown-it": "^10.0.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"highlight.js": "^10.1.1",
		"markdown-it": "^11.0.0",
		"markdown-it-anchor": "^5.3.0"
	}
}
