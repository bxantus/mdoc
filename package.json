{
	"name": "mdoc",
	"displayName": "mdoc - Markdown Documentation Viewer",
	"description": "markdown documentation viewer for Visual Studio Code",
	"version": "1.3.2",
	"publisher": "bxantus",
	"repository": {
		"type": "git",
		"url": "https://github.com/bxantus/mdoc.git"
	},
	"author": {
		"name": "Botond Xantus"
	},
	"icon": "media/icon.png",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "mdoc",
					"title": "Documentations",
					"icon": "media/library_books.svg"
				}
			]
		},
		"views": {
			"mdoc": [
				{
					"id": "mdocProjects",
					"name": "Projects"
				}
			]
		},
		"commands": [
			{
				"command": "mdoc.add.fromFilesystem",
				"title": "Add documentation project from the filesystem",
				"category": "mdoc"
			},
			{
				"command": "mdoc.add.fromGit",
				"title": "Add documentation project from git repository",
				"enablement": "false",
				"category": "mdoc"
			},
			{
				"command": "mdoc.open",
				"title": "Open document",
				"category": "mdoc"
			},
			{
				"command": "mdoc.openSourceFromSidebar",
				"title": "Open document source"
			},
			{
				"command": "mdoc.openIndexFromSidebar",
				"title": "Open `index.md`"
			},
			{
				"command": "mdoc.project.update",
				"title": "Update project",
				"icon": "$(sync)"
			},
			{
				"command": "mdoc.project.search",
				"title": "Search in project",
				"icon": "$(search)"
			},
			{
				"command": "mdoc.project.closeSearch",
				"title": "Close search",
				"icon": "$(close)"
			},
			{
				"command": "mdoc.project.remove",
				"title": "Remove project"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "mdoc.project.update",
					"when": "view == mdocProjects && viewItem == project",
					"group": "inline"
				},
				{
					"command": "mdoc.project.search",
					"when": "view == mdocProjects && viewItem == project",
					"group": "inline"
				},
				{
					"command": "mdoc.project.closeSearch",
					"when": "view == mdocProjects && viewItem == search",
					"group": "inline"
				},
				{
					"command": "mdoc.project.remove",
					"when": "view == mdocProjects && viewItem == project",
					"group": "2_project_commands"
				},
				{
					"command": "mdoc.openSourceFromSidebar",
					"when": "view == mdocProjects && viewItem =~ /^docNode$|^project$/)",
					"group": "1_node_commands"
				},
				{
					"command": "mdoc.openIndexFromSidebar",
					"when": "view == mdocProjects && viewItem == project",
					"group": "1_node_commands"
				}
			],
			"view/title": [
				{
					"command": "mdoc.add.fromGit",
					"when": "view == mdocProjects"
				},
				{
					"command": "mdoc.add.fromFilesystem",
					"when": "view == mdocProjects"
				}
			],
			"commandPalette": [
				{
					"command": "mdoc.project.update",
					"when": "false"
				},
				{
					"command": "mdoc.project.search",
					"when": "false"
				},
				{
					"command": "mdoc.project.closeSearch",
					"when": "false"
				},
				{
					"command": "mdoc.project.remove",
					"when": "false"
				},
				{
					"command": "mdoc.openSourceFromSidebar",
					"when": "false"
				},
				{
					"command": "mdoc.openIndexFromSidebar",
					"when": "false"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "mdocProjects",
				"contents": "No documentation projects added.\n[Add project from filesystem](command:mdoc.add.fromFilesystem)"
			}
		],
		"keybindings": [
			{
				"key": "Ctrl+F1",
				"command": "mdoc.open"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/lunr": "^2.3.3",
		"@types/markdown-it": "^10.0.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/node-fetch": "^2.5.7",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"highlight.js": "^10.4.1",
		"lunr": "^2.3.8",
		"mark.js": "^8.11.1",
		"markdown-it": "^11.0.0",
		"markdown-it-anchor": "^5.3.0",
		"node-fetch": "^2.6.1",
		"vscode-codicons": "0.0.16"
	}
}
